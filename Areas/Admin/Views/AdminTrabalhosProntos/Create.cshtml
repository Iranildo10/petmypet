@model petmypet.Models.TrabalhoPronto

@{
    ViewData["Title"] = "Cadastrar Trabalho";
}

<style>
    body {
        background-color: #FF91C1;
        font-family: Arial, sans-serif;
    }

    .form-container {
        background-color: #FFFFFF;
        border-radius: 10px;
        padding: 2rem;
        max-width: 600px;
        margin: 2rem auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #000000;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: bold;
        color: #000000;
    }

    input[type="text"],
    input[type="number"],
    select,
    textarea {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-bottom: 0.5rem;
    }

    input[type="checkbox"] {
        margin-left: 0.5rem;
        transform: scale(1.2);
    }

    textarea {
        resize: vertical;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .checkbox-inline {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    span.field-validation-error {
        color: red;
        font-size: 0.9rem;
    }

    .btn-submit {
        background-color: #A7D7C5;
        color: #000000;
        padding: 0.6rem 1.5rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        width: 100%;
        margin-bottom: 1rem;
    }

        .btn-submit:hover {
            background-color: #8CCBB5;
        }

    .btn-back {
        display: block;
        text-align: center;
        color: #000000;
        text-decoration: none;
        padding: 0.5rem 1rem;
        background-color: #FFE29A;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-back:hover {
            background-color: #e6cb73;
            text-decoration: none;
        }

    .image-preview-container {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

        .image-preview-container img {
            width: 100%;
            max-width: 300px;
            border-radius: 10px;
            cursor: pointer;
        }

    @@media (max-width: 576px) {
        .form-container {
            padding: 1rem;
        }
    }
</style>

<div class="form-container">
    <h1>Cadastrar Trabalho</h1>

    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="ImagemUrl" />

        <div class="form-group">
            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" />
            <span asp-validation-for="Descricao" class="field-validation-error"></span>
        </div>

        <!-- Preview da imagem atual com clique para editar -->
        <div class="image-preview-container">
            <img src="@Model.ImagemUrl" alt="Imagem do Trabalho" id="previewImage" onclick="triggerFileInput()" />
        </div>

        <!-- Campo de upload de imagem -->
        <div class="form-group">
            <input type="file" id="imageInput" accept="image/*" class="form-control" style="display: none;" onchange="previewNewImage(event)" />
        </div>

        <div class="form-group checkbox-inline">
            <label asp-for="Ativo"></label>
            <input asp-for="Ativo" />
            <span asp-validation-for="Ativo" class="field-validation-error"></span>
        </div>

        <button type="submit" class="btn-submit">Salvar</button>
        <a asp-action="Index" class="btn-back">Cancelar</a>
    </form>
</div>

<script>
    function triggerFileInput() {
        document.getElementById('imageInput').click();
    }

    function previewNewImage(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('previewImage').src = e.target.result;
                document.querySelector('input[name="ImagemUrl"]').value = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    }
</script>
