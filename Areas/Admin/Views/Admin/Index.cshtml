@{
    ViewData["Title"] = "Administração";
}

<style>
    .admin-card {
        background-color: #F5F5F5; /* Cinza Claro */
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .admin-card svg {
            width: 48px;
            height: 48px;
            margin-bottom: 12px;
            fill: #A7D7C5; /* Verde Pastel */
            transition: fill 0.3s ease;
        }

        .admin-card:hover svg {
            fill: #007bff;
        }

        .admin-card p {
            margin: 0;
            font-size: 1.1rem;
            font-weight: 600;
            color: #000000; /* Preto */
        }

    .admin-link {
        text-decoration: none;
        color: inherit;
    }

    .admin-container {
        background-color: #FFFFFF; /* Fundo branco */
        border-radius: 16px;
        padding: 30px 20px;
    }

    @@media (max-width: 576px) {
        .admin-card svg

    {
        width: 40px;
        height: 40px;
    }

    .admin-card p {
        font-size: 1rem;
    }

    }</style>

