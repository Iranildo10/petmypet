@model Cliente
@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<style>
    body {
        background-color: #FF91C1;
        font-family: Arial, sans-serif;
    }

    .form-container {
        background-color: #FFFFFF;
        border-radius: 10px;
        padding: 2rem;
        max-width: 600px;
        margin: 2rem auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #000000;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: bold;
        color: #000000;
    }

    input[type="text"],
    input[type="number"],
    select,
    textarea {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-bottom: 0.5rem;
    }

    span.field-validation-error {
        color: red;
        font-size: 0.9rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn-submit {
        background-color: #A7D7C5;
        color: #000000;
        padding: 0.6rem 1.5rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        width: 100%;
        margin-bottom: 1rem;
    }

        .btn-submit:hover {
            background-color: #8CCBB5;
        }

    .btn-back {
        display: block;
        text-align: center;
        color: #000000;
        text-decoration: none;
        padding: 0.5rem 1rem;
        background-color: #FFE29A;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-back:hover {
            background-color: #e6cb73;
            text-decoration: none;
        }

    @@media (max-width: 576px) {
        .form-container {
            padding: 1rem;
        }
    }
</style>

<div class="form-container">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" />
            <span asp-validation-for="Nome" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefone1">Telefone</label>
            <input asp-for="Telefone1" />
            <span asp-validation-for="Telefone1" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefone2">Telefone 2 (Opcional)</label>
            <input asp-for="Telefone2" />
            <span asp-validation-for="Telefone2" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Endereco1">Endereco</label>
            <input asp-for="Endereco1" />
            <span asp-validation-for="Endereco1" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Endereco2">Endereco 2 (opcional)</label>
            <input asp-for="Endereco2" />
            <span asp-validation-for="Endereco2" class="field-validation-error"></span>
        </div>

        <button type="submit" class="btn-submit">Salvar</button>
    </form>

    <a asp-action="Index" class="btn-back">Voltar à lista</a>
</div>
