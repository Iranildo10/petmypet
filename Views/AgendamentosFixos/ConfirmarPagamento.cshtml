@model petmypet.Models.AgendamentoFixo

@using petmypet.Helpers

@{
    ViewData["Title"] = "Confirmar Pagamento";
}

<link rel="stylesheet" href="~/css/all.css" />

<style>
    body {
        background-color: #FF91C1;
        font-family: Arial, sans-serif;
    }

    .form-container {
        background-color: #FFFFFF;
        border-radius: 10px;
        padding: 2rem;
        max-width: 600px;
        margin: 2rem auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #000000;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .info-item {
        margin-bottom: 1rem;
    }

    .info-label {
        font-weight: bold;
        color: #000000;
    }

    .info-value {
        color: #000000;
    }

    .btn-submit {
        background-color: #A7D7C5;
        color: #000000;
        padding: 0.6rem 1.5rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        width: 100%;
        margin-bottom: 1rem;
    }

        .btn-submit:hover {
            background-color: #8CCBB5;
        }

    .btn-back {
        display: block;
        text-align: center;
        color: #000000;
        text-decoration: none;
        padding: 0.5rem 1rem;
        background-color: #FFE29A;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-back:hover {
            background-color: #e6cb73;
            text-decoration: none;
        }

    @@media (max-width: 576px) {
        .form-container {
            padding: 1rem;
        }
    }
</style>

<div class="form-container">
    <h1>@ViewData["Title"]</h1>

    <p class="mb-4 text-center">Deseja realmente marcar este agendamento como pago?</p>

    <div class="info-item">
        <span class="info-label">Pet:</span>
        <div class="info-value">@Model.Pet.Nome</div>
    </div>

    <div class="info-item">
        <span class="info-label">Dia de Agendamento:</span>
        <div class="info-value">@Model.DiaSemana.ParaPtBr()</div>
    </div>

    <div class="info-item">
        <span class="info-label">Horário:</span>
        <div class="info-value">@Model.Horario.ToString("HH:mm")</div>
    </div>

    <div class="info-item">
        <span class="info-label">Situação Atual:</span>
        <div class="info-value">@(Model.PacoteEmDia == true ? "Em dia" : "Vencido")</div>
    </div>

    <form asp-action="ConfirmarPagamentoPost" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-submit">Confirmar Pagamento</button>
    </form>

    <a asp-action="Index" class="btn-back">Cancelar</a>
</div>
