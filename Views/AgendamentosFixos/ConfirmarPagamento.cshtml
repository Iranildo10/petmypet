@model petmypet.Models.AgendamentoFixo

@{
    ViewData["Title"] = "Confirmar Pagamento";
}

<h2>Confirmar Pagamento</h2>

<div>
    <h4>Deseja realmente marcar este agendamento como pago?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Pet</dt>
        <dd class="col-sm-10">@Model.Pet.Nome</dd>

        <dt class="col-sm-2">Dia de Agendamento</dt>
        <dd class="col-sm-10">@Model.DiaSemana</dd>

        <dt class="col-sm-2">Horário</dt>
        <dd class="col-sm-10">@Model.Horario.ToString("HH:mm")</dd>

        <dt class="col-sm-2">Situação Atual</dt>
        <dd class="col-sm-10">
            @(Model.PacoteEmDia == true ? "Em dia" : "Vencido")
        </dd>
    </dl>

    <form asp-action="ConfirmarPagamentoPost" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-success">Confirmar Pagamento</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
