@model EditUserViewModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<link rel="stylesheet" href="~/css/all.css" />

<style>
    body {
        background-color: #FF91C1;
        font-family: Arial, sans-serif;
    }

    .form-container {
        background-color: #FFFFFF;
        border-radius: 10px;
        padding: 2rem;
        max-width: 600px;
        margin: 2rem auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #000000;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: bold;
        color: #000000;
    }

    input[type="text"],
    input[type="tel"],
    input[type="email"],
    select,
    textarea {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        margin-bottom: 0.5rem;
    }

    .form-check-label {
        color: #000000;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn-submit {
        background-color: #A7D7C5;
        color: #000000;
        padding: 0.6rem 1.5rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        width: 100%;
        margin-bottom: 1rem;
    }

        .btn-submit:hover {
            background-color: #8CCBB5;
        }

    .btn-back {
        display: block;
        text-align: center;
        color: #000000;
        text-decoration: none;
        padding: 0.5rem 1rem;
        background-color: #FFE29A;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-back:hover {
            background-color: #e6cb73;
            text-decoration: none;
        }

    @@media (max-width: 576px) {
        .form-container {
            padding: 1rem;
        }
    }
</style>

<div class="form-container">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" type="text" />
        </div>

        <div class="form-group">
            <label asp-for="Telefone">Telefone</label>
            <input asp-for="Telefone" type="tel" />
        </div>

        <div class="form-group">
            <label asp-for="Endereco">Endereço</label>
            <input asp-for="Endereco" type="text" />
        </div>

        <div class="form-group">
            <label asp-for="Bairro">Bairro</label>
            <input asp-for="Bairro" type="text" />
        </div>

        <div class="form-group">
            <label asp-for="Role">Role</label>
            <input asp-for="Role" type="text" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Ativo" class="form-check-input" />
            <label asp-for="Ativo" class="form-check-label">Ativo</label>
        </div>

        <button type="submit" class="btn-submit">Salvar Alterações</button>
    </form>

    <a asp-action="Index" class="btn-back">Voltar à lista</a>
</div>
