@model RegisterViewModel

@{
    ViewData["Title"] = "Registrar";
}

<style>
    body {
        background-color: #FF91C1;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .register-container {
        max-width: 400px;
        margin: 5% auto;
        background-color: #FFFFFF;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
    }

    .register-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .register-header img {
            max-width: 150px; /* Ajusta o tamanho do logo */
            height: auto;
            margin-bottom: 10px;
        }

        .register-header h1 {
            font-size: 24px;
            color: #000000;
            margin: 0;
        }

    .form-label {
        color: #000000;
        font-weight: bold;
    }

    .form-control {
        background-color: #F5F5F5;
        border: none;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 15px;
    }

    .btn-register {
        background-color: #A7D7C5;
        color: #FFFFFF;
        font-weight: bold;
        border: none;
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-register:hover {
            background-color: #8AC4B3;
        }

    .alert-warning {
        background-color: #FFE29A;
        color: #000000;
        border: none;
        border-radius: 5px;
        padding: 10px;
        margin-top: 15px;
    }

    .already-registered {
        text-align: center;
        margin-top: 10px;
    }

        .already-registered a {
            color: #000000;
            text-decoration: none;
        }

            .already-registered a:hover {
                text-decoration: underline;
            }

    /* Tornando o layout responsivo */
    @@media (max-width: 768px) {
        .register-container {
            margin: 10% auto;
            padding: 15px;
        }
    }
</style>

<body>
    <div class="register-container">
        <div class="register-header">
            <!-- Adicionando o logo -->
            <img src="~/images/logo.png" alt="Pet My Pet Logo" style="border-radius: 0.5rem">
            <h1>Registrar</h1>

        </div>
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite seu nome completo" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Endereco" class="form-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" placeholder="Digite seu endereço" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Bairro" class="form-label">Bairro</label>
                <input asp-for="Bairro" class="form-control" placeholder="Digite seu bairro" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telefone" class="form-label">Telefone</label>
                <input asp-for="Telefone" id="telefone" class="form-control" placeholder="Digite seu número de telefone" maxlength="11" oninput="mascaraTelefone(this)" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Senha</label>
                <input asp-for="Password" class="form-control" placeholder="Crie uma senha" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-register">Registrar</button>
        </form>
        <div class="already-registered">
            <a asp-area="" asp-controller="Account" asp-action="Login">Já possui uma conta? Faça login</a>
        </div>
    </div>
</body>

<script>
    // Função para aplicar a máscara de telefone
    function mascaraTelefone(input) {
        // Remove qualquer caractere não numérico
        let valor = input.value.replace(/\D/g, '');

