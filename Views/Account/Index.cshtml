@model List<ApplicationUser>

@{
    ViewData["Title"] = "Usuários";
}

<style>
    body {
        background-color: #FF91C1;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container-clientes {
        max-width: 1000px;
        margin: 2rem auto;
        background-color: #FFFFFF;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow-x: auto;
    }

    h2 {
        text-align: center;
        color: #000000;
        margin-bottom: 1.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: #FFE29A;
    }

    th, td {
        padding: 0.75rem;
        text-align: left;
        border: 1px solid #ddd;
        vertical-align: top;
    }

    tbody tr:hover {
        background-color: #f9f9f9;
    }

    .btn-sm {
        margin: 2px 2px;
        padding: 0.3rem 0.6rem;
        border-radius: 4px;
        font-size: 0.875rem;
        display: inline-block;
    }

    .btn-warning {
        background-color: #F7DC6F;
        border: none;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #F4D03F;
        }

    .btn-info {
        background-color: #5DADE2;
        border: none;
        color: white;
    }

        .btn-info:hover {
            background-color: #3498DB;
        }

    .btn-danger {
        background-color: #EC7063;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #E74C3C;
        }

    @@media (max-width: 768px) {
        .container-clientes

    {
        padding: 1rem;
    }

    table, thead, tbody, th, td, tr {
        display: block;
        width: 100%;
    }

    thead {
        display: none;
    }

    tr {
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 0.5rem;
        background-color: #fff;
    }

    td {
        border: none;
        position: relative;
        padding-left: 40%;
        text-align: left;
    }

        td::before {
            position: absolute;
            top: 0.75rem;
            left: 1rem;
            width: 45%;
            padding-right: 1rem;
            white-space: nowrap;
            font-weight: bold;
            color: #333;
        }

        td:nth-of-type(1)::before {
            content: "Nome";
        }

        td:nth-of-type(2)::before {
            content: "Telefone";
        }

        td:nth-of-type(3)::before {
            content: "Endereço";
        }

        td:nth-of-type(4)::before {
            content: "Bairro";
        }

        td:nth-of-type(5)::before {
            content: "Status";
        }

        td:nth-of-type(6)::before {
            content: "Ações";
        }

    }
</style>

<div class="container-clientes">
    <h2>Usuários</h2>

    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Endereço</th>
                <th>Bairro</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Nome</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Endereco</td>
                    <td>@user.Bairro</td>
                    <td>@(user.Ativo ? "Ativo" : "Inativo")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-info">Redefinir Senha</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
